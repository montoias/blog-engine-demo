<div class="layout layout-sm-column">
  {{paper-input
    class="flex-30"
    label="Title"
    value=model.title
    onChange=(action (mut model.title))}}

  {{paper-input
      class="flex-60"
      label="Image"
      value=model.image
      onChange=(action (mut model.image))}}
</div>

{{paper-input
  textarea=true
  block=true
  label="Body"
  passThru=(hash rows=5 maxRows=5)
  value=model.description
  onChange=(action (mut model.description))}}

{{#link-to 'index' tagName="div"}}
  {{#paper-button raised=true}}
    Cancel
  {{/paper-button}}
{{/link-to}}

{{#paper-button raised=true primary=true onClick=(route-action "createPost" model)}}
  Create Post
{{/paper-button}}

{{outlet}}